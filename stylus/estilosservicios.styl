.text-servicios-det
	width 70%
	div
		width 70%
		margin 0 auto
.img-servicios-det
	width 30%
	img
		width 90%
		margin 0 auto
		height auto
		border-radius 50%

@media screen and (max-width 800px)
	.text-servicios-det
		float none !important
		width 100%
		div
			width 70%
			margin 0 auto
	.img-servicios-det
		float none !important
		width 100%
		img
			width 50%
			margin 0 auto
			height auto
			border-radius 50%